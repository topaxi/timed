<form class="form-horizontal" {{action 'submit' on='submit'}}>
  <div id="graph"></div>

  <br>

  <button type="button" class="daterange btn btn-default">
    <span class="fa fa-calendar"></span>
    <span>{{date-format from 'MMMM Do YYYY'}} - {{date-format to 'MMMM Do YYYY'}}</span>
    <span class="caret"></span>
  </button>

  <br>

  {{#each weekdays as |weekday|}}
    <div class="form-group">
      <label class="col-sm-2 control-label">{{weekday}}</label>
      <div class="col-sm-8 form-slider form-control-static">
        <div class="ui-slider ui-slider-horizontal ui-widget ui-widget-content ui-corner-all"></div>
      </div>
      <div class="col-sm-1">8</div>
    </div>
  {{/each}}

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button class="btn btn-primary">Apply</button>
    </div>
  </div>
</form>
