<div class="grid">
  <div class="grid-cell grid-cell--4of12">
    {{#liquid-spacer}}
      {{#if session.user.currentAssignments}}
        <h2>Assigned Projects</h2>

        {{#each session.user.currentAssignments as |assignment|}}
          {{assigned-project assignment=assignment}}
        {{/each}}
      {{/if}}
    {{/liquid-spacer}}

    {{#liquid-spacer}}
      {{#if session.user.projects}}
        <h2>{{#link-to 'project'}}Followed Projects{{/link-to}}</h2>

        {{#each session.user.projects as |project|}}
          {{followed-project project=project}}
        {{/each}}
      {{/if}}
    {{/liquid-spacer}}
  </div>

  {{attendance-list
    user      = session.user
    day       = day
    class     = 'grid-cell--8of12'
    openModal = 'openModal'
    }}
</div>
